@model List<Restorent_app.Models.TableModel>

@{
    ViewData["Title"] = "Show Tables";
}

<style>
    .container {
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<div class="container">
    <h2>Tables List</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }

    <table>
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Capacity</th>
                <th>Actions</th> <!-- New column for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.NumberOfTable</td>
                    <td>@table.Capacity</td>
                    <td>
                        <a asp-action="Book" asp-controller="Booking" asp-route-tableId="@table.Tableid" class="btn btn-primary">Book Table</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
