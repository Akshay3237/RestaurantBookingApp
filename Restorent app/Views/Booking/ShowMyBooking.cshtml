@model List<Restorent_app.Models.BookModel>

@{
    ViewData["Title"] = "My Bookings";
}

<style>
    .container {
        margin-top: 20px;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }
</style>

<div class="container">
    <h2>My Bookings</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Restaurant Name</th>
                <th>Table Capacity</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Table.Restaurant.RestaurantName</td>
                    <td>@booking.Table.Capacity</td>
                    <td>@booking.StartTime.ToString("g")</td>
                    <td>@booking.EndTime.ToString("g")</td>
                    <td>
                        <a href="@Url.Action("CancelBooking", new { BookId = booking.BookId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this booking?');">
                            Cancel
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
