@model List<Restorent_app.Models.FeedbackModel>

@{
    ViewBag.Title = "Restaurant Feedback";
}

<h2>Feedback for @Model.FirstOrDefault()?.Restaurant.RestaurantName</h2>

@if (Model.Count == 0)
{
    <p>No feedback available for this restaurant yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Rating</th>
                <th>Message</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.User.UserName</td>
                    <td>
                        @for (int i = 1; i <= feedback.RateNo; i++)
                        {
                            <i class="fa fa-star" style="color: yellow;"></i>
                        }
                        @for (int i = feedback.RateNo + 1; i <= 5; i++)
                        {
                            <i class="fa fa-star" style="color: #ccc;"></i>
                        }
                    </td>
                    <td>@feedback.Message</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
